{% embed "MainCommonBundle:Emails:email.html.twig" %}
		{% block h1 %}{{ user.username }},{% endblock %}
		{% block p_lead %}
			{% trans with{'%reference%' : prestation.reference} from "email" %}prestation.message.p_lead %reference%
			{% endtrans %}
		{% endblock %}
		{% block panel %}
			{% trans from "email" %}prestation.message.panel
			{% endtrans %}
		{% endblock %}
		{% block link %}{{ base_url }}/service/{{ prestation.id }}{% endblock %}
		{% block text %}
			{% trans from "email" %}prestation.message.text
			{% endtrans %}
		{% endblock %}

		{% block mail %}
			{% if type == 1 %}
				{% trans from "email" %}generic.mail.client
				{% endtrans %}
			{% else %}
				{% trans from "email" %}generic.mail.photographer
				{% endtrans %}
			{% endif %}
		{% endblock %}


	{% endembed %}