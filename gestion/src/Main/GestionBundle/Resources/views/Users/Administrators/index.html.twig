{% extends '::base.html.twig'%}
{% block titleH1 %}{% trans %}gestion.users.administrators.index.h1{% endtrans %}{% endblock %}
{% block titleH2 %}{% trans %}gestion.users.administrators.index.h2{% endtrans %}{% endblock %}
{% block breadcrumbH1 %}
<i class="fa fa-university"></i>
{% trans %}gestion.users.administrators.index.breadh1{% endtrans %}
{% endblock %}
{% block breadcrumbH2 %}{% trans %}gestion.users.administrators.index.breadh2{% endtrans %}{% endblock %}
{% block content %}
<!-- Main content -->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{% trans %}gestion.users.administrators.index.h2{% endtrans %}</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">               
                <table id="datatable" class="table table-bordered table-striped">
                    {% include "MainGestionBundle:Users:list.html.twig" %}
                </table>
            </div>
            {% if is_granted('ROLE_SUPER_ADMIN')%}
            <div class="box-footer">
                <a href="{{ path('create_user')}}" class="btn btn-primary">
                    {% trans %}gestion.users.administrators.index.btn.create{% endtrans %}
                </a>
            </div>
            {% endif %}
        </div><!-- /.box -->
    </div>
</div>
{% endblock %}

{% block javascripts_inline %}
        <script type="text/javascript">
            $(function() {
                $('#datatable').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>
{% endblock %}