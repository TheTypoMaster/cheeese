{% block content %}
                <!-- Main content -->
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">{% trans %}gestion.users.photographers.verify.h2{% endtrans %}</h3>
                                </div><!-- /.box-header -->
                                {% include "MainGestionBundle:Users/Photographers/verify:list.html.twig" %}
                                <div class="box-footer clearfix">
                                    <a class="btn btn-default pull-left" href="{{ path('users', {'type' : 'photographers' } ) }}">
