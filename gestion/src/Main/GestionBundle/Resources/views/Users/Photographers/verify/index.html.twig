{% block javascripts_inline %}
        <script type="text/javascript">
            $(function() {
                $('#datatable').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
            $('#approveModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var modal = $(this);
                var aSupprSplited = $('#aSuppr').attr('href').split('/');
                aSupprSplited[aSupprSplited.length - 2] = id;
                $('#aSuppr').attr('href', aSupprSplited.join('/'));
             });
             $('#refuseModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var modal = $(this);
                var aSupprSplited = $('#aSuppr1').attr('href').split('/');
                aSupprSplited[aSupprSplited.length - 2] = id;
                $('#aSuppr1').attr('href', aSupprSplited.join('/'));
             });
        </script>
{% endblock %}