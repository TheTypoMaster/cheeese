{% extends '::base.html.twig'%}
{% block content %}

                    <div class="error-page">
                        <h2 class="headline text-info"> 403</h2>
                        <div class="error-content">
                            <h3><i class="fa fa-warning text-yellow"></i> 
                            	{{'error.403.title'|trans}}
                            </h3>
                            <p>{{'error.403.p'|trans}}</p>
                            <p>
                            	{% if app.user %}
	                            	{% if is_granted('ROLE_PHOTOGRAPHER') %}
	                                <a href= "{{ path('dashboard')}}" class="btn btn-primary">{{'error.500.a'|trans}}</a>
	                                {% else %}
	                                	<a href= "{{ path('fos_user_security_logout')}}" class="btn btn-success">{{'error.500.a'|trans}}</a>
	                                {% endif %}
	                            {% endif %}
                            </p>
                        </div>
                    </div>

{% endblock %}