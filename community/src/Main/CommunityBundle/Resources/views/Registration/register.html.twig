<!DOCTYPE HTML>
<html class="bg-black">
<head>
    <meta charset="UTF-8">
    <title>{% block title %} {{ 'Register' |trans }} {% endblock %}</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

     {% block stylesheets %}
    	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	    {% stylesheets 'bundles/maincommunity/css/*' filter="cssrewrite" %}
	    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
	    {% endstylesheets %}
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

    <![endif]-->
</head>
<body class="bg-black">
{% block fos_user_content %}
<div class="form-box" id="login-box">
	<div class="header">{{ 'security.register.header' |trans}}</div>
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">    
	    <div class="body bg-gray">
	            <div class="form-group">
	                {{ form_widget(form.email, {'attr': {'placeholder': 'security.register.form.email'|trans, 'required': 'required', 'class': 'form-control'}}) }}
	            </div>
	            <div class="form-group">
	                {{ form_widget(form.username, {'attr': {'placeholder': 'security.register.form.username'|trans, 'required': 'required', 'class': 'form-control'}}) }}
	            </div>
	            <div class="form-group">
	            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'security.register.form.plainPassword.first'|trans, 'required': 'required', 'class': 'form-control'}}) }}
	            {% for errorItem in form.plainPassword.first.vars.errors %}
			      <label class="control-label has-error" for="{{ form.plainPassword.vars.id }}">{{ errorItem.message }}</label>
			    {% endfor %}
	            </div>
	            <div class="form-group">
	             {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'security.register.form.plainPassword.second'|trans, 'required': 'required', 'class': 'form-control'}}) }}
	            </div>
	        </div>
	        {{ form_rest(form) }}
	        <div class="footer">
            <button type="submit" class="btn bg-olive btn-block">{{'security.register.btn.submit'|trans}}</button>

            <p>
            <a href="{{ path('fos_user_security_login') }}">{{'security.register.link'|trans}}</a>
        	</p>
            <p>
            <a href="{{ path('about') }}" class="text-center">{{'security.about.link'|trans}}</a>
        	</p>

        </div>
	</form>
	
</div>
{% endblock fos_user_content %}

</body>
</html>
