{% extends '::base.html.twig'%}
{% block title %}{% trans from "company" %}companies.iban.edit.h1{% endtrans %}{% endblock %}
{% block titleH1 %}{% trans from "company" %}companies.iban.edit.h1{% endtrans %}{% endblock %}
{% block titleH2 %}{% trans from "company" %}companies.iban.edit.h2{% endtrans %}{% endblock %}
{% block breadcrumbH1 %}
<i class="fa fa-money"></i>{% trans from "company" %}companies.iban.edit.breadcrumbh1{% endtrans %}{% endblock %}
{% block breadcrumbH2 %}{% trans from "company" %}companies.iban.edit.breadcrumbh2{% endtrans %}{% endblock %}
{% block content %}
<section class="content">
	<div class="row">
			<div class="col-md-12">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h3 class="box-title">
                                        {% trans from "company" %}companies.iban.edit.header{% endtrans %}</h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                               {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                    <div class="box-body">
                                        <div class="form-group {% if not form.name.vars.valid %}has-error{% endif %}">                             
                                        {{ form_label(form.name) }}                         
                                        {{ form_widget(form.name) }}
                                        <div class="text-red">
                                        {{ form_errors(form.name) }}
                                        </div>
                                        <p class="help-block">
                                        {% trans from "forms" %}help.iban.field.name {% endtrans %}
                                        </p>
                                        </div>
                                        <div class="form-group {% if not form.address.vars.valid %}has-error{% endif %}">                             
                                        {{ form_label(form.address) }}                         
                                        {{ form_widget(form.address) }}
                                        <div class="text-red">
                                        {{ form_errors(form.address) }}
                                        </div>
                                        <p class="help-block">
                                        {% trans from "forms" %}help.iban.field.address {% endtrans %}
                                        </p>
                                        </div>
                                        <div class="form-group {% if not form.iban.vars.valid %}has-error{% endif %}">                             
                                        {{ form_label(form.iban) }}                         
                                        {{ form_widget(form.iban) }}
                                        <div class="text-red">
                                        {{ form_errors(form.iban) }}
                                        </div>
                                        <p class="help-block">
                                        {% trans from "forms" %}help.iban.field.iban {% endtrans %}
                                        </p>
                                        </div>

                                        <div class="form-group {% if not form.bic.vars.valid %}has-error{% endif %}">                             
                                        {{ form_label(form.bic) }}                         
                                        {{ form_widget(form.bic) }}
                                        <div class="text-red">
                                        {{ form_errors(form.bic) }}
                                        </div>
                                        <p class="help-block">
                                        {% trans from "forms" %}help.iban.field.bic {% endtrans %}
                                        </p>
                                        </div>
                                       				
                                        {{ form_rest(form) }}
                                    </div><!-- /.box-body -->

                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-primary" data-confirm="test">
                                        	{% trans from "company" %}companies.iban.edit.btn.submit{% endtrans %}</button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
		</div>	
	</div>
</section>
{% endblock %}

