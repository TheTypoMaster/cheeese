{% extends '::base.html.twig'%}
{% block titleH1 %}{% trans from "offers" %}community.devis.read.h1{% endtrans %}{% endblock %}
{% block titleH2 %}{% trans from "offers" %}community.devis.read.h2{% endtrans %}{% endblock %}
{% block breadcrumbH1 %}{% trans from "offers" %}community.devis.read.breadh1{% endtrans %}{% endblock %}
{% block breadcrumbH2 %}{% trans from "offers" %}community.devis.read.breadh2{% endtrans %}{% endblock %}
{% block content %}
                <!-- Main content -->
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">{{ devis.title }}</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <form action="{{ path('devis_edit', {'id' : devis.id}) }}">
                                	<button class="btn btn-default btn-sm">{% trans from "offers" %}community.devis.read.btn.edit{% endtrans %}</button>
                                	</form>
                                </div>
                                <div class="box-body">
                                	<blockquote>
                                		<p>{{ devis.presentation }}</p>
                                		
                                	</blockquote>
                                	<dl class="dl-horizontal">
                                		<dt> {% trans from "offers" %}community.devis.read.dt.category{% endtrans %} </dt>
                                		<dd> {{ devis.category.name}} </dd>
                                		<dt> {% trans from "offers" %}community.devis.read.dt.duration{% endtrans %} </dt>
                                		<dd> {{ devis.duration.libelle }} </dd>
                                		<dt> {% trans from "offers" %}community.devis.read.dt.price{% endtrans %} </dt>
                                		<dd> {{ devis.price }} </dd>
                                		<dt> {% trans from "offers" %}community.devis.read.dt.currency{% endtrans %} </dt>
                                		<dd> {{ devis.currency.libelle }} </dd>
                                		<dt> {% trans from "offers" %}community.devis.read.dt.status{% endtrans %} </dt>
                                		<dd>
                                		 {% if 1 == devis.active %}
                                                <td><span class="label label-success">{% trans from "offers" %}community.devis.read.dt.active.enabled{% endtrans %}</span></td>
                                                {% elseif 0 == devis.active %}
                                                <td><span class="label label-danger">{% trans from "offers" %}community.devis.read.dt.active.disabled{% endtrans %}</span></td>
                                                {% endif %}
                                       	</dd>
                                       	{% if devis.prestations == 1 %}
                                		<dt> {% trans from "offers" %}community.devis.read.dt.notation{% endtrans %} </dt>
                                		<dd> {{ devis.note }} ({{ devis.prestations}} {% trans from "offers" %}community.devis.read.dt.notation.count{% endtrans %})</dd>
                                		{% elseif devis.prestations > 1 %}
                                		<dt> {% trans from "offers" %}community.devis.read.dt.notation{% endtrans %} </dt>
                                		<dd> {{ devis.note }} ({{ devis.prestations}} {% trans from "offers" %}community.devis.read.dt.notation.count{% endtrans %})</dd>
                                		{% endif %}
                                	</dl>
                                </div><!-- /.box-body -->                                
                            </div><!-- /.box -->
                            {% if services|length == 0 %}
                            	<div class="box">
                            		<div class="box-header">
                                    <h3 class="box-title">{% trans from "offers" %}community.devis.read.services.empty{% endtrans %}</h3>
                                	</div><!-- /.box-header -->                          
                                	<div class="box-body table-responsive">
                                	</div>
                            	</div>
                            {% else %}
                            	<div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">{{ services|length }} {% trans from "offers" %}community.devis.read.services{% endtrans %}</h3>
                                </div><!-- /.box-header -->
                                {% include "MainCommunityBundle:Services:list.html.twig" %}
                            </div><!-- /.box -->
                            
                            {% endif %}
                        </div>
                    </div>
{% endblock %}

{% block javascripts_inline %}
        <script type="text/javascript">
            $(function() {
                $('#datatable').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>
{% endblock %}