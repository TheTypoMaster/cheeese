{% extends '::base.html.twig'%}
{% block title %}{% trans with {'%reference%' : prestation.reference} from "services" %}community.service.cancel.title %reference%{% endtrans %}{% endblock %}
{% block titleH1 %}{% trans from "services" %}community.service.cancel.h1{% endtrans %}{% endblock %}
{% block titleH2 %}{% trans from "services" %}community.service.cancel.h2{% endtrans %}{% endblock %}
{% block breadcrumbH1 %}
<i class="fa fa-warning"></i>{% trans from "services" %}community.service.cancel.breadh1{% endtrans %}{% endblock %}
{% block breadcrumbH2 %}{% trans from "services" %}community.service.cancel.breadh2{% endtrans %}{% endblock %}
{% block content %}
	<div class="row">
		<div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                    	{% trans with {'%reference%' : prestation.reference} from "services" %}community.service.cancel.header %reference%{% endtrans %}
                    </h3>
                </div>
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                <div class="box-body">
                	<div class="callout callout-danger">
                		<p>
                			{% trans from "services" %}community.service.cancel.warning.p1.first{% endtrans %}
                			<a href="#">{% trans from "services" %}
							community.service.cancel.warning.p1.link
							{% endtrans %}</a>
                			{% trans from "services" %}community.service.cancel.warning.p1.second{% endtrans %}
                		</p>
                        <p>
                            <strong>
                                {% trans from "services" %}community.service.cancel.warning.p2{% endtrans %}
                            </strong>                            
                        </p>
                	</div>
                	<div class="alert alert-warning">
                		<i class="fa fa-warning"></i>
                		<b>{% trans from "services" %}community.service.cancel.help.title{% endtrans %}</b>
                		<br>
                		{% trans from "services" %}community.service.cancel.help.text1{% endtrans %}
                		<br>
                		{% trans from "services" %}community.service.cancel.help.text2{% endtrans %}
                	</div>
                	<div class="form-group {% if not form.comments.vars.valid %}has-error{% endif %}">								
                        {{ form_label(form.comments) }}                         
                        {{ form_widget(form.comments) }}
                        <div class="text-red">
                          {{ form_errors(form.comments) }}
                        </div>
                        <p class="help-block">
                        {% trans from "forms" %}help.prestation.cancel.field.comments{% endtrans %}
                        </p>
                    </div>

                	<div class="form-group {% if not form.oldPassword.vars.valid %}has-error{% endif %}">								
                        {{ form_label(form.oldPassword) }}                         
                      	{{ form_widget(form.oldPassword) }}
                        <div class="text-red">
                        {{ form_errors(form.oldPassword) }}
                        </div>
                        <p class="help-block">
                        {% trans from "forms" %}help.prestation.cancel.field.old{% endtrans %}
                        </p>
                    </div>
                    {{ form_rest(form) }}
                </div>

                <div class="box-footer">
                	<button type="submit" class="btn btn-danger">{% trans from "services" %}community.service.edit.btn.submit{% endtrans %}</button>
                	<a href="{{ path('service_show', {'id' : prestation.id}) }}"  class="btn btn-default">{% trans from "services" %}community.service.edit.btn.back{% endtrans %}</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_inline %}
{% endblock %}