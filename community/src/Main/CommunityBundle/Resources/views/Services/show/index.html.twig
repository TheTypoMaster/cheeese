{% extends '::base.html.twig'%}
{% block titleH1 %}{% trans from "services" %}community.service.show.h1{% endtrans %}{% endblock %}
{% block titleH2 %}{% trans from "services" %}community.service.show.h2{% endtrans %}{% endblock %}
{% block breadcrumbH1 %}{% trans from "services" %}community.service.show.breadh1{% endtrans %}{% endblock %}
{% block breadcrumbH2 %}{% trans from "services" %}community.service.show.breadh2{% endtrans %}{% endblock %}
{% block content %}
                <!-- Main content -->
                	<h2 class="page-header">
                		{% trans from "services" %}community.service.show.header{% endtrans %} {{ prestation.reference }}
                	</h2>
                    <div class="row">
                    	<div class="col-xs-4">
                        	<div class="box">
                        		<div class="box-header">
                                    <h4 class="box-title">
										{% trans from "services" %}community.service.show.h4.date{% endtrans %}
                                    </h4>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                		<p>
                                			{{ prestation.address }} {{ prestation.town.name }} {{ prestation.town.code }} {{ prestation.town.country.name }}
                                		</p>
                                		<p>
                                			{{ prestation.starttime | date('d/m/Y')}} {% trans from "services" %}community.service.show.li.at{% endtrans %} {{ prestation.starttime | date('H:i')}}
                                		</p>
                                		<p>
                                			{{ prestation.duration.libelle }}
                                		</p>
                                </div>
                                <div class="box-footer">
                                	
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-4">
                        	<div class="box">
	                        	<div class="box-header">
	                                    <h4 class="box-title">
	                                    {% trans from "services" %}community.service.show.h4.client{% endtrans %}
	                                	</h4>
	                            </div>
	                            <div class="box-body">
		                            <div class="user-panel">
	                                    <div class="pull-left image">
	                                        <img src="{{ image64(prestation.client.photo, prestation.client.photoType, 'pp') }}"  class="img-circle" />
	                                    </div>
	                                    {{ prestation.client.username }}
                                        <br>
                                        <i class="fa fa-star-o"></i> {{ prestation.client.note }}
                                        <i class="fa fa-comment-o"></i> {{ prestation.client.prestations }}                                
                                	</div>
	                            </div><!-- /.box-header -->
                                <div class="box-footer">
                                </div>
	                        </div>
                        </div>

                        <div class="col-xs-4">
                        	<div class="box">
                        		<div class="box-header">
	                                    <h4 class="box-title">
	                                    {% trans from "services" %}community.service.show.h4.devis{% endtrans %}
	                                	</h4>
	                            </div>
	                            <div class="box-body">
	                            	<p><a href="{{ path('devis_read', {id: prestation.devis.id})}}">{{ prestation.devis.title }}</a></p>
	                            	<p>{{ prestation.price }} ({{ prestation.devis.currency.libelle }})</p>
	                            	<p>{{ prestation.status.libelle }}</p>
	                            </div>
                                 <div class="box-footer">
                                    
                                </div>
                        	</div>
                        </div>

                        <div class="col-xs-12">
                            <a class="btn btn-default"  href="{{ path('service') }}">{% trans from "services" %}community.service.show.btn.back{% endtrans %}</a>
									{% if 1 == prestation.status.id %}
									<a class="btn btn-success"  href="{{ path('service_edit', { 'id' : prestation.id, 'slug': 2 }) }}">{% trans from "services" %}community.service.show.btn.approve{% endtrans %}</a>
									<a class="btn btn-danger"  href="{{ path('service_edit', { 'id' : prestation.id, 'slug': 3 }) }}">{% trans from "services" %}community.service.show.btn.refuse{% endtrans %}</a>
									
									{% endif %}  
									{% if commentAllowed %}
							    		{% if  null == commentPhotographer %}
							    			<a class="btn btn-default"  href="{{ path('notation', { 'id' : prestation.id}) }}">{% trans from "services" %}community.service.show.btn.evaluate{% endtrans %}</a>
							    		{% endif %} 
						    		{% endif %}   
                          </div>
                       </div>
                       
                       {% if commentAllowed %}
	                     <h2 class="page-header">
	                     	{% trans from "services" %}community.service.show.btn.evaluations{% endtrans %}
	                     </h2>
	                     <!-- EVALUTATION-->
	                    {% include "MainCommunityBundle:Services\\show:notation.html.twig" %} 
                       {% endif %}
                       <h2 class="page-header">
                       	{% trans from "services" %}community.service.show.timeline.header{% endtrans %}
                       </h2>
                       <!-- TIMELINE -->
                       	{% include "MainCommunityBundle:Services\\show:timeline.html.twig" %}

                        {% if commentAllowed == false %}
                        <h2 class="page-header">{% trans from "services" %}community.service.show.response.add{% endtrans %}</h2>
                        <div class="row">
                    		<div class="col-xs-12">
	                            <div class="box">
	                            	<div class="box-header">
	                                </div><!-- /.box-header -->
	                                <!-- form start -->
	                               {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
	                                    <div class="box-body">									
	                                        {{ form_rest(form) }}
	                                    </div><!-- /.box-body -->
	
	                                    <div class="box-footer">
	                                        <button type="submit" class="btn btn-primary">{% trans from "services" %}community.service.show.response.btn.submit{% endtrans %}</button>
	                                    </div>
	                                {{ form_end(form) }}
	                            </div>
                        	</div>
                        </div>
                        {% endif %}
{% endblock %}