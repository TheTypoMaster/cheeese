<!DOCTYPE HTML>
<html class="bg-black">
<head>
    <meta charset="UTF-8">
    <title>{% block title %} {{ 'security.resetting.reset.title' |trans }} {% endblock %}</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

     {% block stylesheets %}
    	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	    {% stylesheets 'bundles/maincommunity/css/*' filter="cssrewrite" %}
	    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
	    {% endstylesheets %}
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

    <![endif]-->
</head>
<body class="bg-black">
{% block fos_user_content %}
<div class="form-box" id="login-box">
    <div class="header">{{ 'security.resetting.reset.header' |trans}}</div> 
    
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    <div class="body bg-gray">
        {{ form_errors(form.plainPassword.first)}}
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'security.resetting.reset.form.plainPassword.first'|trans, 'required': 'required', 'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'security.resetting.reset.form.plainPassword.second'|trans, 'required': 'required', 'class': 'form-control'}}) }}
        </div>
        {{ form_rest(form)}}
    </div>
     <div class="footer">
                <input type="submit" class="btn bg-olive btn-block" value="{{ 'security.resetting.reset.btn.submit'|trans }}" /> 
            </div>
</form>
    
</div>
{% endblock fos_user_content %}

</body>
</html>
