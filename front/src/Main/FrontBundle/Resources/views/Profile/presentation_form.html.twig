{% extends "::layout.html.twig" %}
{% block title %}{% trans %}user.edit.title{% endtrans %}{% endblock%}
{% block content %}
<div class="col-md-3 content">
    {{ include("MainFrontBundle:Menu:side_bar.html.twig" ,{id: 'informations'}, with_context = false) }}
</div>
<div class="col-md-9 content">
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <h5 class="box-title">
            	{% trans %}user.edit.header{% endtrans %}
            </h5>
        </div>
       {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
            <div class="panel-body">	
                <div class="form-group {% if not form.firstName.vars.valid %}has-error{% endif %}">                             
                {{ form_label(form.firstName) }}                         
                {{ form_widget(form.firstName) }}
                <div class="text-red">
                {{ form_errors(form.firstName) }}
                </div>
                <p class="help-block">
                {% trans from "forms" %}help.presentation.field.firstName {% endtrans %}
                </p>
                </div>
                <div class="form-group {% if not form.lastName.vars.valid %}has-error{% endif %}">                             
                {{ form_label(form.lastName) }}                         
                {{ form_widget(form.lastName) }}
                <div class="text-red">
                {{ form_errors(form.lastName) }}
                </div>
                <p class="help-block">
                {% trans from "forms" %}help.presentation.field.lastName {% endtrans %}
                </p>
                </div>
                <div class="form-group {% if not form.telephone.vars.valid %}has-error{% endif %}">                             
                {{ form_label(form.telephone) }}                         
                {{ form_widget(form.telephone) }}
                <div class="text-red">
                {{ form_errors(form.telephone) }}
                </div>
                <p class="help-block">
                {% trans from "forms" %}help.presentation.field.telephone {% endtrans %}
                </p>
                </div>

                <div class="form-group {% if not form.presentation.vars.valid %}has-error{% endif %}">                             
                {{ form_label(form.presentation) }}                         
                {{ form_widget(form.presentation) }}
                <div class="text-red">
                {{ form_errors(form.presentation) }}
                </div>
                <p class="help-block">
                {% trans from "forms" %}help.presentation.field.presentation {% endtrans %}
                </p>
                </div>

                {{ form_rest(form) }}                                        
            </div>

            <div class="panel-footer">
                <button type="submit" class="btn btn-primary">
                	{% trans %}user.edit.btn.submit{% endtrans %}
                </button>

                <a href="{{ path('presentation_pp') }}" class="btn btn-success">{% trans %}user.show.btn.pp{% endtrans %}</a>
                <a href="{{ path('presentation') }}" class="btn btn-link">
                	{% trans %}user.edit.btn.back{% endtrans %}
                </a>
            </div>
        {{ form_end(form) }}
        </div>
	</div>	
</div>
</section>
{% endblock %}