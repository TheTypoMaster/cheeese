{% extends "::layout.html.twig" %}
{% block title %}{% trans %}user.pp.title{% endtrans %}{% endblock%}
{% block content %}
<div class="col-md-3 content">
    {{ include("MainFrontBundle:Menu:side_bar.html.twig" ,{id: 'informations'}, with_context = false) }}
</div>
<div class="col-md-9 content">
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <h5 class="box-title">
            	{% trans %}user.pp.header{% endtrans %}
            </h5>
        </div>
       {{ form_start(form) }}
                                    
        <div class="panel-body">									
        	{{ form_widget(form) }}
        </div>

        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">
            	{% trans %}user.edit.btn.submit{% endtrans %}
            </button>
            <a href="{{ path('presentation') }}" class="btn btn-link">
            	{% trans %}user.edit.btn.back{% endtrans %}
            </a>
        </div>
    	{{ form_end(form) }}
	</div>
</div>
</section>
{% endblock %}