{% extends "::layout.html.twig" %}

{% block content %}
	<div class="col-md-12 content">
  		<div class="panel panel-default">
			<div class="panel-heading">
				{% trans from "prestations" %}prestation.details.header{% endtrans %}
			</div>
			<div class="panel-body">
				 {{ form_start(form) }}
			   <div class="col-lg-12">
				   {{ form_widget(form) }}
			   <button type="submit" class="btn">{% trans from "prestations" %}prestation.btn.submit{% endtrans %}</button>
			   </div>
			{{ form_end(form) }}
			</div>
		</div>
  	</div>
{% endblock %}
{% block bottom_script %}

<script type="text/javascript">
    $(function() {
                var divsToHide = document.getElementsByClassName("caption");
			    for(var i = 0; i < divsToHide.length; i++)
			    {
			    divsToHide[i].style.visibility="hidden";
			    }
            });
    </script>    
{% endblock bottom_script %}